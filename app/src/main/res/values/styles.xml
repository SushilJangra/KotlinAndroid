<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="heading_style" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/head_font</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_style" parent="heading_style">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="subtitle_style" parent="title_style">
        <item name="android:textSize">@dimen/subtitle_font</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/app_padding_vertical</item>
        <item name="android:paddingRight">@dimen/app_padding_vertical</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/box_gray_round_rectangle</item>
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edittext</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_theme_round_rectangle</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="topRoundCardStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/radius_big</item>
        <item name="cornerSizeTopLeft">@dimen/radius_big</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>